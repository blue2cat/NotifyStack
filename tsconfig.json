{
  "compilerOptions": {
    "target": "ES2022",                  
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,                   
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "lib": ["ES2022"],
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}